<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFBFB"
    tools:context=".RegistrationForm">
    <LinearLayout
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".RegistrationForm"
        android:background="@drawable/bg_login">


        <EditText
            android:id="@+id/register_fullname_id"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/et_bg"
            android:hint="@string/full_name_hint"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            />

        <EditText
            android:id="@+id/register_email_id"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="25dp"
            android:background="@drawable/et_bg"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            />

        <EditText
            android:id="@+id/register_password_id"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/et_bg"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            />

        <EditText
            android:id="@+id/register_confirm_password_id"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/et_bg"
            android:textColor="#FFFFFF"
            android:hint="@string/confirmpassword"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            />

        <EditText
            android:id="@+id/register_institution_id"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/et_bg"
            android:hint="@string/institution"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            />

        <LinearLayout
            android:layout_width="198dp"
            android:layout_height="73dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="102dp"
                android:layout_height="38dp"
                android:text="@string/gender"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <RadioGroup
                android:id="@+id/gender_radiogroup_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <RadioButton
                    android:id="@+id/register_male_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/male"
                    android:textColor="#F5F4F4"

                    />
                <RadioButton
                    android:id="@+id/register_female_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/female"
                    android:textColor="#F5F4F4"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="198dp"
            android:layout_height="73dp"

            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usertypeid"
                android:layout_width="102dp"
                android:layout_height="38dp"
                android:text="@string/usertype"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <RadioGroup
                android:id="@+id/usetype_radiogroup_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <RadioButton
                    android:id="@+id/register_student_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/student"
                    android:textColor="#F5F4F4"
                    />
                <RadioButton
                    android:id="@+id/register_teacher_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/teacher"
                    android:textColor="#F5F4F4"
                    />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/register_button_idd"
            android:layout_width="136dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_bg"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            />




    </LinearLayout>
</ScrollView>