<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/loginbackground"
    tools:contextxc=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="310dp"
        android:layout_marginBottom="300dp"
        android:layout_marginTop="220dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/emailicon">

                </ImageView>
                <EditText
                    android:id="@+id/u_email_id"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:textColor="#1B33BB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    ></EditText>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/passwordicon">
                </ImageView>
                <EditText
                    android:id="@+id/password_id"
                    android:layout_marginLeft="5dp"
                    android:textColor="#1B33BB"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    ></EditText>

            </LinearLayout>
            <Button
                android:id="@+id/login_btn_id"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="95dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="#1A2E94"
                ></Button>
            <TextView
                android:id="@+id/register_id"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="210dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="#060F4E"
                ></TextView>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>