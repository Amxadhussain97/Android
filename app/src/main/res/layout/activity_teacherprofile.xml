<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFBFB"
    tools:context=".Teacherprofile"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="374dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="#222B86"
            android:orientation="vertical">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/icon_profile" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Amzad"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="332dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp"
            android:background="#C52020">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="127"
                        android:textColor="#4E58BD"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Likes"

                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="#4E58BD"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tution"

                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80"
                        android:textColor="#4E58BD"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="363dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/teacher_account_institution_24dp"/>
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Leading University"

            android:textStyle="bold"
            android:textColor="#5B664E"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="363dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/teacher_account_phone_black_24dp"/>
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="01797057615"

            android:textStyle="bold"
            android:textColor="#5B664E"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="363dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/teacher_account_location_24dp"/>
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mukambari,Gashitula"

            android:textStyle="bold"
            android:textColor="#5B664E"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="363dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/teacher_gender_24dp"/>
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Male"

            android:textStyle="bold"
            android:textColor="#5B664E"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="60dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/messege_button_bg"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:text="Edit Info"
        android:textColor="#FFFFFF"
        />

</LinearLayout>